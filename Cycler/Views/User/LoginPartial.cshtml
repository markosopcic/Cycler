@model Cycler.Controllers.Models.AuthenticateModel



<div class="text-center">
    
    <h2 style="font-family:Lobster,serif;padding-bottom: 5%">Login</h2>
    
    <form asp-controller="User" asp-action="Authenticate" method="post">
        <label>Email</label>
        <input asp-for="@Model.Email" class="form-control" style="width:50%;margin: auto" type="text" placeholder="Email"/>
        <label>Password</label>
        <input asp-for="@Model.Password" class="form-control" style="width:50%;margin: auto" type="password" placeholder="Password"/>
        <button id="login-button" type="submit" class="btn btn-primary" style="margin-top : 3%;width: 30%">Login</button>
    </form>
</div>