@model Cycler.Controllers.Models.EventModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<form asp-controller="Event" asp-action="CreateEvent">
    <div class="form-row">
    <div class="form-group col-md-6">
        <label for ="name">Name</label>
        <input id="name" asp-for="@Model.Name" class="form-control" style="margin:auto" type="text" placeholder="Name"/>
    </div>
    </div>
    <div class="form-row">
    <div class="form-group col-md-6">
    <label for="description" >Description</label>
        <input id="description" asp-for="@Model.Description" style="margin:auto" class="form-control" type="text" placeholder="Description"/>
    </div>
    </div>
  <div class="form-group">
    <div class="form-check">
      <input asp-for="@Model.IsPrivate" class="form-check-input" type="checkbox" id="private">
      <label class="form-check-label" for="private y">
        Private event
      </label>
    </div>
  </div>
    <div class="form-row">
    <div class="form-group col-md-6">
    <label for="starttime">Start time</label>
    <input id="starttime" asp-for="@Model.StartTime" style="margin:auto" class="form-control" type="datetime-local"/>
    </div>
    </div>
    <button class="btn btn-primary" type="submit" style="width:50%;margin:auto">Create Event</button>
</form>